generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model appointments {
  id String @id @db.ObjectId @default(auto()) @map("_id")

  name String
  description String?

  schedules schedules[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model schedules {
  id String @id @db.ObjectId @default(auto()) @map("_id")

  time String
  utc Int
  appointment_id String @db.ObjectId

  appointment appointments @relation(fields: [appointment_id], references: [id])

  bookings bookings[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model bookings {
  id String @id @db.ObjectId @default(auto()) @map("_id")

  date String 
  schedule_id String @db.ObjectId

  schedule schedules @relation(fields: [schedule_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}